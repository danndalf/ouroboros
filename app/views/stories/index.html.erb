<div class="sixteen columns">
<h2>Stories</h2>

<% @stories.each do |story| %>
<p class="story">
<strong><%= link_to story.title, story %></strong> (<%= story.when.year %><% if story.place != ''%> in <%= story.place %><% end %>) <em><% if story.submitter != '' %>by <% end %><% if story.email != '' %><a href="mailto:<%= story.email %>"><% end %><%= story.submitter %><% if story.email != '' %></a><% end %></em>
</p>
<% end %>

</div>
